{
    "name":  "libreport-backend",
    "version":  "1.0.0",
    "private":  true,
    "type":  "commonjs",
    "scripts":  {
                    "start":  "node server.js",
                    "dev":  "node scripts/bootstrap-dev.js \u0026\u0026 node --watch server.js",
                    "dev:nodb":  "node --watch server.js",
                    "db:indexes":  "node scripts/indexes.js",
                    "db:sanitize":  "node scripts/sanitize_fields.js",
                    "check:connection":  "node scripts/check_connection.js",
                    "migrate:local:atlas":  "node scripts/migrate_to_atlas.js --from local --to env --drop-target",
                    "token:secret":  "node scripts/generate_jwt_secret.js",
                    "check:data":  "node scripts/check_data.js",
                    "db:indexes:clean":  "node scripts/indexes_clean.js --apply",
                    "db:seed":  "node scripts/seed.js",
                    "db:bootstrap":  "npm run db:indexes \u0026\u0026 npm run db:seed",
                    "db:check:admins":  "node scripts/check_admins.js",
                    "import:books":  "node scripts/import_books.js",
                    "export:books":  "node scripts/books_export.js",
                    "validate:books":  "node scripts/books_validate.js",
                    "import:books:data":  "node scripts/import_books.js data/books.template.csv",
                    "migrate:covers":  "node scripts/migrate_legacy_covers.js"
                },
    "dependencies":  {
                         "bcryptjs":  "^3.0.2",
                         "compression":  "^1.7.4",
                         "cors":  "^2.8.5",
                         "dotenv":  "^17.2.3",
                         "express":  "^5.1.0",
                         "jsonwebtoken":  "^9.0.2",
                         "libreport-workspace":  "file:..",
                         "mongodb-memory-server":  "^10.2.3",
                         "mongoose":  "^8.8.0",
                         "morgan":  "^1.10.1",
                         "validator":  "^13.15.15"
                     }
}
